
{% extends 'base.html.twig' %}

{% block title %}Acceuil | {{ parent() }}{% endblock %}

{% block css %}
<link rel="stylesheet" href="{{ asset('css/acceuil.css') }}">
{% endblock %}

{% block body %}

<div class="contenant">
            <div class="texte_centrer">Je grandis avec les fruits et les légumes frais</div>
            <img src="images/fond.png" alt="bonnes pratiques" id="image" style="opacity: 0.4;">
</div>


<div class="container" id="carousel">
<h1>Découvrez nos articles</h1>
    
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>           
      </ol>
    <div class="carousel-inner" role="listbox">


         <!-- Printemps-->
         <div class="carousel-item" style="background-image: url('images/enfants2.png')">
          <div class="carousel-caption d-none d-md-block">
            <h3>La diversification alimentaire</h3>
            <a href="{{ path('diversification') }}"><button type="button" class="btn btn-lg btn-primary" id="">Voir article</button></a>
          </div>
        </div>

        <!-- Hiver-->
         <div class="carousel-item active" style="background-image: url('images/bonne-pra.jpg');" >
          <div class="carousel-caption d-none d-md-block">
            <h3 style="color: #fff!important">Les bonnes pratiques</h3>
            <a href="{{ path('pratiques') }}"><button type="button" class="btn btn-lg btn-primary" id="btn-pra">Voir article</button><a>
          </div>
        </div>

    </div>

      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  


</div>

<!-- carousel finish -->

<h1>Calendrier des saisons</h1>
<div class="container" >

<div class="contenant">
            <div class="texte_centrer-calender">Découvrez le coeur de saison pour consommez des fruits et légumes frais tout au long de l’année.</div>
            <div id="button">
              <a href="{{ path('calendrier') }}">  <button class="btn"> Voir le calendrier des saisons  </button></a>
            </div>
            <img id="cld" src="images/calendar.png" style="opacity: 0.6;"/>
</div>



</div>
   
{% endblock %}
