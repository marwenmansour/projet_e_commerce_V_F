{% extends 'base.html.twig' %}

{% block title %}se connecter!{% endblock %}
{% block css %} <link rel="stylesheet" href="{{ asset('css/connecter.css') }}"> {% endblock %}
{% block body %}

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
<div class="container">
        <div class="row content">

            <div class="col-md-6 mb-3">
                <img src="images/Login-bro.svg" class="img-fluid" alt="image">
            </div>

            <div class="col-md-6" id="form">
                <h3 class="signin-text mb-3">Se connecter</h3>
                <form>
                    <div class="form-group">
                        <label for="inputPseudo">Pseudo</label>
                        <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" autocomplete="off" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword"class="form-control" autocomplete="off" required>
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" name="_remember_me" class="form-check-input" id="checkbox">
                        <label class="form-check-label" for="_remember_me">Se souvenir de moi</label>
                    </div>
                    <button class="btn btn-class" type="submit">Se connecter</button>
                    <p>Vous n'avez pas encore un compte ? <a href="{{ path('app_register') }}">Cr√©ez-en un !</a></p>
                </form>
            </div>
            
            {{ app.request.get("password") }}
    </div>

</div>
</form>
{% endblock %}